<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      
      <div class="new">  
        <div class="panel panel-default">   
           <div class="panel-body"> 
            <% if @user.errors.any? %>
              <div>
                <h3>Some issues with your Sign Up, please fix them:</h3>
                <% @user.errors.full_messages.each do |message| %>
                  <div class="alert alert-danger" role="alert">
                    <p><%= message %></p>
                  </div>
                <% end %>
              </div>
            <% end %>

            <form method="post" action="/user">
              <div class="form-group">
                <label for="firstNameInput">First Name:</label>
                <input type="text" class="form-control" name="firstname" value="<%= @user.first_name %>" id="firstNameInput" placeholder="First Name">
              </div>
              <div class="form-group">
                <label for="lastNameInput">Last Name:</label>
                <input type="text" class="form-control" name="lastname" value="<%= @user.last_name %>" id="lastNameInput" placeholder="Last Name">
              </div>
              <div class="form-group">
                <label for="userNameInput">Username:</label>
                <input type="text" class="form-control" name="username" value="<%= @user.username %>" id="userNameInput" placeholder="Username">
              </div>
              <div class="form-group">
                <label for="passwordInput">Password:</label>
                <input type="password" class="form-control" name="password" value="<%= @user.password %>" id="passwordInput" placeholder="Password">
              </div>
              <div>
                <button type="submit" class="btn btn-success">Signup</button>
              </div>
            </form>
          </div>
        </div>
      </div>

    </div>
    <div class="col-md-4"></div>
  </div>
</div>