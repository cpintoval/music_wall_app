<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      
      <div class="new">  
        <div class="panel panel-default">   
           <div class="panel-body"> 
            <% if @song.errors.any? %>
              <div>
                <h4>Some issues with your song, please fix them:</h4>
                <% @song.errors.full_messages.each do |message| %>
                  <div class="alert alert-danger" role="alert">
                    <p><%= message %></p>
                  </div>
                <% end %>
              </div>
            <% end %>

            <form method="post" action="/songs">
              <div class="form-group">
                <label for="titleInput">Title:</label>
                <input type="text" class="form-control" name="title" value="<%= @song.title %>" id="titleInput" placeholder="Title">
              </div>
              <div class="form-group">
                <label for="authorInput">Author:</label>
                <input type="text" class="form-control" name="author" value="<%= @song.author %>" id="authorInput" placeholder="Author">
              </div>
              <div class="form-group">
                <label for="urlInput">Image URL (Optional, just to show the album image):</label>
                <input type="text" class="form-control" name="url" value="<%= @song.url %>" id="urlInput" placeholder="Image URL">
              </div>
              <div>
                <button type="submit" class="btn btn-success">Paste To The Wall!</button>
              </div>
            </form>
          </div>
        </div>
      </div>

    </div>
    <div class="col-md-4"></div>
  </div>
</div>